{
  "printWidth": 100,
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "requirePragma": false,
  "arrowParens": "always",
  "bracketSameLine": true,
  "endOfLine": "lf",
  "jsxSingleQuote": true,
  "proseWrap": "always",
  "embeddedLanguageFormatting": "auto",
  "plugins": ["prettier-plugin-tailwindcss", "@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^react$",
    "^react-(.*)$",
    "^@/(.*)$",
    "^@pages/(.*)$",
    "^@widgets/(.*)$",
    "^@entities/(.*)$",
    "^@shared/(.*)$",
    "^@auth/(.*)$",
    "^@customer/(.*)$",
    "^@dashboard/(.*)$",
    "^@helper/(.*)$",
    "^@icons/(.*)$",
    "^@assets/(.*)$",
    "^@schema/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
